{
  "name": "react-visible-image",
  "version": "0.0.0-development",
  "description": "Show only images that are in the viewport",
  "keywords": [
    "react",
    "component",
    "image",
    "performance"
  ],
  "main": "dist/src/index.js",
  "files": [
    "dist/src",
    "LICENSE",
    "main.js"
  ],
  "types": "dist/src/index.d.ts",
  "homepage": "https://github.com/posty72/react-visible-image",
  "repository": {
    "type": "git",
    "url": "https://github.com/posty72/react-visible-image"
  },
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "test": "jest --coverage",
    "test:types": "tsc --noEmit",
    "release": "semantic-release",
    "prepack": "npm run build"
  },
  "author": "Josh Post <contact+npm@posty.co.nz>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/posty72/react-visible-image/issues"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/tests/**/*.{spec,test}.{js,jsx,ts,tsx}"
    ],
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**/*.{js,jsx,ts,tsx}"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover",
      "json-summary"
    ]
  },
  "jest-junit": {
    "outputDirectory": "test-results",
    "outputName": "junit.xml"
  },
  "devDependencies": {
    "@babel/core": "^7.13.14",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-typescript": "^7.13.0",
    "@testing-library/react": "^11.2.6",
    "@types/jest": "^26.0.22",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-test-renderer": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^8.8.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^12.0.0",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "semantic-release": "^21.0.1",
    "ts-jest": "^29.2.5",
    "typescript": "^4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "optionalDependencies": {
    "intersection-observer": "^0.12.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
